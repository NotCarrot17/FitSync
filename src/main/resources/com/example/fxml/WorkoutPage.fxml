<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitsync.controller.WorkoutPageController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10; -fx-background-color: #F5F5F5;">
            <ImageView fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../../FitSync_Logo.png" />
            </ImageView>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="FitSync" />
            <TextField prefWidth="300" promptText="Search" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 10; -fx-background-color: white;">
            <Button prefWidth="150" style="-fx-background-color: white;" text="Overview" />
            <Button prefWidth="150" style="-fx-background-color: #E53935; -fx-text-fill: white;" text="Workout" />
            <Button prefWidth="150" style="-fx-background-color: white;" text="Diet Plan" />
            <Button prefWidth="150" style="-fx-background-color: white;" text="Goals &amp;&#10;Achievements" />
            <Button prefWidth="150" style="-fx-background-color: white;" text="Progress" />
            <Button prefWidth="150" style="-fx-background-color: white;" text="My Community" />
            <Button prefWidth="150" style="-fx-background-color: white;" text="Logout" />
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Header Section -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Start Your Workout From Today" />

            <!-- Coach Session -->
            <HBox spacing="20" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 15;">
                <ImageView fitHeight="100" fitWidth="150" pickOnBounds="true" preserveRatio="true">
<!--                    <Image url="@coach.jpg" />-->
                </ImageView>
                <VBox spacing="10">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Adrianna Lamb" />
                    <Label text="Legs Workout | Beginner Level" />
                    <Button style="-fx-background-color: #FFA726; -fx-text-fill: white;" text="Start Now" />
                </VBox>
            </HBox>

            <!-- Upcoming Workouts -->
            <GridPane hgap="20" vgap="20">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Upcoming Workout" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Stretch (08:00)" />
                    <Label text="Back Stretch (09:00)" />
                    <Label text="Yoga (10:00)" />
                </VBox>
            </GridPane>
        </VBox>
    </center>

    <right>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #F8F8F8;">
            <!-- Schedule -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="My Schedule" />
            <ListView prefHeight="200">
            </ListView>

            <!-- Purchased Classes -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Purchased Classes" />
            <ListView prefHeight="100">
            </ListView>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #E0E0E0;">
            <Label text="Â© 2024 FitSync. All rights reserved." />
        </HBox>
    </bottom>

</BorderPane>
